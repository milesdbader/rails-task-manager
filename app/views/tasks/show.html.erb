<h1><%= @task[:title] %></h1>

<p><%= @task[:details] %></p>

<%= link_to 'Edit this task', task_edit_path(@task) %>
<br><br>

<input type="checkbox" name="task<% @task[:index] %>" onclick="return false;" value="Task" <%= 'checked' if @task[:completed] %> >
<% message = @task[:completed] ? "completed" : "This task is not yet completed" %>
<label for="task<% @task[:index] %>"><%= message %></label><br>

<%= link_to "Back to Task List", tasks_path %>
