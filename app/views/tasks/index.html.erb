<h1>My Tasks</h1>

<ul style="list-style: none;">
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="task<% task[:index] %>" onclick="return false;" value="Task" <%= 'checked' if task[:completed] %> >
      <label for="task<% task[:index] %>"><%= link_to task[:title], task_path(task) %></label><br>
      <%= link_to "delete", task_destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Create new task", tasks_new_path %>
